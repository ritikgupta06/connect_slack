# Slack API credentials
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# App base URL (e.g., http://localhost:3000)
BASE_URL=your_base_url

# Slack OAuth redirect URI
SLACK_REDIRECT_URI=your_redirect_uri

# Frontend URL after OAuth success
FRONTEND_BASE_URL=your_frontend_base_url

# Session secret
SESSION_SECRET=your_session_secret

# Backend port
PORT=your_port

# Frontend whitelist (comma separated)
FRONTEND_WHITELIST=http://localhost:5173,https://local.itshivam.in,https://app.yourprod.com
